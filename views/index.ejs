<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>TODO List</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">üìù My TODO List</h1>

    <form action="/add" method="POST" class="d-flex mb-3">
      <input type="text" name="task" class="form-control me-2" placeholder="Add a new task..." required>
      <button class="btn btn-primary">Add</button>
    </form>

    <ul class="list-group">
      <% todos.forEach(todo => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= todo.task %>
          <form action="/delete/<%= todo.id %>" method="POST" class="d-inline">
            <button class="btn btn-sm btn-danger">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
